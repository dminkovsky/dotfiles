#!/bin/bash

set -o vi
shopt -u cmdhist

export PS1="\[$(tput setaf 4)\]\w \\$ \[$(tput sgr0)\]"

alias p='pwd'
alias f='find'
alias l='ls -alhtr'
alias ll='ls -lh'
alias grep='grep --color=auto'
alias less='less --chop-long-lines -r'
alias listening='netstat -a -n | grep LISTEN'
alias vi=vim
alias e=vim
alias pd='pushd'
alias pp='popd'

vim_plugins_inst() {
    vim +PluginInstall +qall
}

refactor() {
    for f in $(find . -type f); do
        if grep -q "$1" "$f"; then
            sed -i -e "s/${1}/${2}/g" "$f"
        fi
        # TODO // Rename files ($1.java -> $2.java)
    done;
}

grepr() {
    grep -rn $1 .
}

paug() {
    ps aux | grep $1 | grep -v grep | grep $1
}

colors() {
    for i in {0..255}; do printf "\x1b[38;5;${i}m color ${i}\n"; done 
}
